        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{ACCESS_TOKEN}}",
            "type": "text",
            "description": "User's access token"
          }
        ],
        "url": {
          "raw": "http://localhost:3000/api/user/delete",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "3000",
          "path": [
            "api",
            "user",
            "delete"
          ]
        }
      },
      "response": []
